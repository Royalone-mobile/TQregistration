<%= render 'admins/header' %>

<div class="row-buttons">
    <h2 class="page-title page-title-blue">Check in List</h2>
</div>

<div class="booking-table">
    <%= render 'table' %>
    
    <p class="text-form">
      <%= link_to "DOWNLOAD EXCEL SHEET", admin_bookings_path(@admin.id, format: "xls"), class: "btn btn-create" %>
    </p>
    <p class="text-form">
      <%= link_to "DELETE OLDER THAN A YEAR",  admin_destroy_365days_path(current_admin),  class: "btn btn-create"%>
    </p>


    <br>
    <br>

    <div>
        <h2 class="page-title page-title-blue">
            Guest Charts
        </h2>
        <p class="text-regular text-form ">Amount of guests by day, month and year</p>

    </div>
    <!-- check chartkick.com to see other possibilities of charts, graphics etc -->
    <%= line_chart chart_data @admin, 'day' %>
    <%= line_chart chart_data @admin, 'month' %>
    <%= line_chart chart_data @admin, 'year' %>
    <%= render 'new' %>
    <br>
    <br>
    <br>
    <br>

</div>
</div>
